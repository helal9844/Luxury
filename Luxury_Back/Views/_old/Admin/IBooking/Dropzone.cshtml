@using Luxury_Back.Helpers;

@{
    ViewData["Title"] = "Create IBooking";
    Layout = "~/Areas/Root/Views/Shared/Layout/_CardView.cshtml";
}

@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";

}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/ui/prism.min.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/file-uploaders/dropzone.min.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css-@isRTL/plugins/file-uploaders/dropzone.css">
}

    <form asp-action="_Dropzone" asp-route-id="@ViewBag.id" class="dropzone dropzone-area" id="dpz-remove-thumb" enctype="multipart/form-data">
        @*<button class="btn btn-primary d-inline-flex fw-bold" type="submit"><i class="ft-upload-cloud mx-1" style="font-size:1.5rem"></i> @localizer["upload"]</button>*@
        <div>
            <div class="dz-message">@localizer["dropHere"]</div>
            <input type="file" name="file" class="d-none" multiple/>
        </div>
    </form>

    @section Scripts{
    <script src="~/Admin/app-assets/vendors/js/extensions/dropzone.min.js" type="text/javascript"></script>
    <script src="~/Admin/app-assets/vendors/js/ui/prism.min.js" type="text/javascript"></script>
    <script>
        Dropzone.options.dpzRemoveThumb = {
            paramName: "file", // The name that will be used to transfer the file
            maxFilesize: 1, // MB
            addRemoveLinks: true,
            maxFiles: 5,
            dictRemoveFile: " Trash"
        }

    </script>
}
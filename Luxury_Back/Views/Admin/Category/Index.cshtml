@model IEnumerable<Category>
@{
   
    ViewBag.title = "Home Page";
    Layout = "~/Views/Shared/Admin/Layout/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet"
      type="text/css"
      href="~/Admin/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/core/menu/menu-types/vertical-menu-modern.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
}

    <section id="configuration">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-underline">Categories </h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collapse show">
                        
                        <div class="card-body card-dashboard">
                            <a class="btn btn-info text-capitalize white my-3"><i class="ft-file-plus"></i>add new</a>
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Parent</th>
                                        <th>Childs</th>
                                        <th>Active</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.name</td>
                                            <td>@(item.parent !=null ? item.parent.name:null)</td>
                                        <td>@(item.childs != null ? item.childs.Count():0)</td>
                                        <td>@item.IsActive</td>
                                        <td>
                                            <a class="btn btn-info white"><i class="ft-edit"></i>Edit</a>
                                            <a class="btn btn-danger white"><i class="ft-trash-2"></i>Delete</a>
                                        </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Parent</th>
                                        <th>Childs</th>
                                        <th>Active</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@section Scripts {
    <script src="~/Admin/app-assets/js/scripts/pages/dashboard-sales.js"
        type="text/javascript"></script>
    <script src="~/admin/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
}
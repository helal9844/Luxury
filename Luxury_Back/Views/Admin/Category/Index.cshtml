
@model IEnumerable<Category>
@{
   
    ViewBag.title = "Home Page";
    Layout = "~/Views/Shared/Admin/Layout/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet"
      type="text/css"
      href="~/Admin/assets/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/core/menu/menu-types/vertical-menu-modern.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
}

    <section id="configuration">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-underline">@localizer["category"] </h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="container mx-auto">
                        @if (TempData["error_msg"] != null)
                        {
                            <div class="alert alert-danger text-center">@TempData["error_msg"]</div>
                        }
                        @if (TempData["success_msg"] != null)
                        {
                            <div class="alert alert-success text-center">@TempData["success_msg"]</div>
                        }
                    </div>
                    
                    <div class="card-content collapse show">
                        <div class="card-body card-dashboard">
                        <a class="btn btn-info text-capitalize white my-2"><i class="ft-file-plus"></i>@localizer["add_new"]</a>
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                    <th>@localizer["name_category"]</th>
                                    <th>@localizer["parent_category"]</th>
                                    <th>@localizer["count_child"]</th>
                                    <th>@localizer["active_category"]</th>
                                    <th>@localizer["actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.Id</th>
                                            <td>@item.name</td>
                                            <td>@(item.parent !=null ? item.parent.name:null)</td>
                                            <td>@(item.childs != null ? item.childs.Count():0)</td>
                                            <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="activate badge badge-success fw-bolder text-capitalize text-white">@localizer["isActive"]</span>
                                            }else{
                                                <span class="activate badge badge-danger fw-bolder text-capitalize text-white">@localizer["inActive"]</span>
                                            }
                                            </td>
                                            <td>
                                            <a class="btn btn-info white"><i class="ft-edit"></i> @localizer["edit"]</a>
                                            <a asp-action="activation" asp-route-id="@item.Id" class="btn btn-warning white"><i class="ft-repeat"></i> @localizer[item.IsActive?"inActive":"isActive"] </a>
                                            <a onclick="return confirm('Are you sure you want to delete Category?')" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger white"><i class="ft-trash-2"></i> @localizer["delete"]</a>
                                        </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                    <th>@localizer["name_category"]</th>
                                    <th>@localizer["parent_category"]</th>
                                    <th>@localizer["count_child"]</th>
                                    <th>@localizer["active_category"]</th>
                                    <th>@localizer["actions"]</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@section Scripts {
    <script src="~/Admin/app-assets/js/scripts/pages/dashboard-sales.js"
        type="text/javascript"></script>
    <script src="~/admin/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
}
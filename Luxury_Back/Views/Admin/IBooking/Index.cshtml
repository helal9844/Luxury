@using Luxury_Back.Helpers
@model IEnumerable<IBooking>


@{
    ViewData["Title"] = localizer["categories"];
    Layout = "~/Views/Shared/Admin/Layout/_CardView.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/assets/css/core/menu/menu-types/vertical-menu-modern.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
}

<a asp-action="Create" asp-controller="IBooking" class="btn btn-info text-capitalize white my-2"><i class="ft-file-plus"></i>@localizer["add_new"]</a>
<table class="table table-striped table-bordered zero-configuration text-center">
    <thead>
        <tr>
               
                <th>#</th>
                <th>@localizer["name"]</th>
                <th>@localizer["category"]</th>
                <th>@localizer["brand"]</th>
                <td>@localizer["img"]</td>
                <th>@localizer["activate"]</th>
                <th>@localizer["actions"]</th>
        </tr>
    </thead>
    <tbody>
        @*/** IBooking Data **/*@
        @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <th>@(Helper.getLnag() == "ar" ? item.name_ar : item.name_en)</th>
                <th>@(item.Category != null ? Helper.getLnag() == "ar" ? item.Category.name_ar : item.Category.name_en : null)</th>
                <th>@(item.Brand != null ? Helper.getLnag() == "ar" ? item.Brand.name_ar : item.Brand.name_en : null)</th>
                <td>
                @foreach (var img in ViewBag.IBookingImgs){
                   if (img !=null )
                   {
                       if (img.IBookingId == item.Id){
                           <img src="@(img.Name)" class="table-img" width="100" height="100"/>
                       }
                   }
                }
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="activate badge badge-success fw-bolder text-capitalize text-white">@localizer["isActive"]</span>
                    }
                    else
                    {
                        <span class="activate badge badge-danger fw-bolder text-capitalize text-white">@localizer["inActive"]</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="IBooking" class="btn btn-info white"><i class="ft-edit"></i> @localizer["edit"]</a>
                    <a asp-action="activation" asp-route-id="@item.Id" class="btn btn-warning white"><i class="ft-repeat"></i> @localizer[item.IsActive?"inActive":"isActive"] </a>
                    <a onclick="return confirm('Are you sure you want to delete Category?')" asp-controller="IBooking" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger white"><i class="ft-trash-2"></i> @localizer["delete"]</a>
                </td>
            </tr>

        }
    </tbody>
    <tfoot>
        <tr>
          
            <th>#</th>
            <th>@localizer["name"]</th>
            <th>@localizer["category"]</th>
            <th>@localizer["brand"]</th>
            <td>@localizer["img"]</td>
            <th>@localizer["activate"]</th>
            <th>@localizer["actions"]</th>
        </tr>
    </tfoot>
</table>

@section Scripts {
    <script src="~/admin/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
}
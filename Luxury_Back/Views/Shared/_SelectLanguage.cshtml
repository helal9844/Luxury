@using Microsoft.AspNetCore.Builder;
@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Http.Features;
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Options

@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> options;

@{
	var requestCulture = Context.Features.Get<IRequestCultureFeature>();
	var cultures = options.Value.SupportedUICultures
					.Select(s => new SelectListItem { Value = s.Name, Text = s.NativeName }).ToList();

	var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";

 }
<form asp-action="SelectLanguage" asp-controller="Home" asp-route-returnUrl="@returnUrl" method="post">
    <select name="culture" asp-for="@requestCulture.RequestCulture.UICulture.Name"
            asp-items="cultures"
            onchange="this.form.submit();">
    </select>
</form>
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model User;
@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";
}
@{
    ViewBag.title = localizer["login"];
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout_Login.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css/core/menu/menu-types/vertical-menu-modern.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css/core/colors/palette-gradient.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css/pages/login-register.css">
}

@section Scripts {
    <script src="~/Admin/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>

}

<section class="flexbox-container">
    <div class="col-12 d-flex align-items-center justify-content-center">
        <div class="col-md-4 col-10 box-shadow-2 p-0">
            <div class="card border-grey border-lighten-3 m-0">
                <div class="card-header border-0">
                    <partial name="_SelectLanguage" />
                    <div class="card-title text-center">
                        <div class="p-1">
                            <img src="~/Admin/app-assets/images/logo/logo-dark.png" alt="branding logo">
                        </div>
                    </div>
                    <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-2">
                            <span>@localizer["Login with Modern"]</span>
                    </h6>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        @if (TempData["userError"] != null)
                        {
                            <div class="alert alert-danger text-center text-white">@TempData["userError"]</div>
                        }
                        <form asp-action="login" class="form-horizontal form-simple" novalidate method="post">
                            <fieldset class="form-group position-relative has-icon-left mb-0">
                                    <input type="text" class="form-control form-control-lg input-lg" 
                                    id="user-name" asp-for="Email" placeholder="@localizer["placeholdeusername"]"
                                    required>
                                <div class="form-control-position">
                                    <i class="ft-user"></i>
                                </div>
                                <span class="invalid-feedback d-block">
                                    @TempData["Email"]
                                </span>
                            </fieldset>
                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="password" class="form-control form-control-lg input-lg" id="user-password"
                                       placeholder="@localizer["placeholdpass"]" asp-for="password" required>
                                <div class="form-control-position">
                                    <i class="la la-key"></i>
                                </div>
                                <span class="invalid-feedback d-block">
                                    @TempData["password"]
                                </span>
                            </fieldset>
                            <div class="form-group row">
                                <div class="col-md-6 col-12 text-center text-md-left">
                                    <fieldset>
                                        <input type="checkbox" id="remember-me" class="chk-remember">
                                        <label for="remember-me"> @localizer["remember me"]</label>
                                    </fieldset>
                                </div>
                                <div class="col-md-6 col-12 text-center text-md-right"><a href="recover-password.html" class="card-link">@localizer["forget_password?"]</a></div>
                            </div>
                            <button type="submit" class="btn btn-info btn-lg btn-block"><i class="ft-unlock"></i> @localizer["login"]</button>
                        </form>
                    </div>
                </div>
                @*<div class="card-footer">
                    <div class="">
                        <p class="float-sm-left text-center m-0"><a href="recover-password.html" class="card-link">Recover password</a></p>
                        <p class="float-sm-right text-center m-0">New to Moden Admin? <a href="register-simple.html" class="card-link">Sign Up</a></p>
                    </div>
                </div>*@
            </div>
        </div>
    </div>
</section>


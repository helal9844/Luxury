
@{
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet"
      type="text/css"
      href="~/Admin/app-assets/css-@ViewData["isRTL"]/core/menu/menu-types/vertical-menu-modern.css" />
    @RenderSection("Styles", required: false)
}
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title text-capitalize text-decoration-underline">@(ViewData["cardTitle"] != null ? ViewData["cardTitle"] : ViewData["Title"]) </h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <partial name="../Panel/_TempMesages.cshtml" />
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard overflow-x-auto">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    
    @RenderSection("Scripts", required: false)
    
}
@using Luxury_Back.Helpers;

@model IEnumerable<IBooking>
@{
    ViewData["Title"] = "Filter";
    Layout = "~/Areas/Root/Views/Shared/Layout/_CardView.cshtml";
    var isRTL = ViewData["isRTL"] = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";
}

@section Styles{

    <link rel="stylesheet" type="text/css" href="~Admin/app-assets/vendors/js/gallery/photo-swipe/photoswipe.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/js/gallery/photo-swipe/default-skin/default-skin.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css-@(isRTL)/pages/gallery.css">
}

<div class="card-body ibooking_filter my-gallery"">

    <div class="row">
        @foreach (var item in Model)
    {
        
        <div class="col-md-3">
            <figure class="card card-img-top border-grey border-lighten-2">
                <a >
                        <img class="gallery-thumbnail card-img-top" src="@(Helper.imageUrl(@item.images.First().Name))"
                    height="300"/>
                </a>
                <div class="card-body px-0">
                    <a href="@("https://localhost:7014/IBooking/Show/"+item.Id)" style="color: #111;text-decoration: none;">
                        <h4 class="card-title">@(Helper.getLnag() == "ar"? item.name_ar: item.name_en)</h4>

                        <p class="card-text">
                            @if (item.iBookingAttributes.Count != 0)
                            {

                                if(item.iBookingAttributes.First() != null)
                                {
                                    <small class="text-muted">Night Cost: <b>EGP @item.iBookingAttributes.First().value??0</b></small>
                                }
                            }

                        </p>
                        <p class="card-text reviews">
                            <span>0.@(Helper.RandomNum(5, 9))</span>
                            <b>Very Good</b>
                            <small>   </small>
                            <small>@(Helper.RandomNum(200, 800)) reviews</small>
                        </p>
                    </a>
                </div>
        </figure>
        </div>
    }
    </div>

    
</div>

@section Scripts{

    <script src="~/Admin/app-assets/vendors/js/gallery/masonry/masonry.pkgd.min.js"
        type="text/javascript"></script>
    <script src="~/Admin/app-assets/vendors/js/gallery/photo-swipe/photoswipe.min.js"
        type="text/javascript"></script>
    <script src="~/Admin/app-assets/vendors/js/gallery/photo-swipe/photoswipe-ui-default.min.js"
        type="text/javascript"></script>

    <script src="~/Admin/app-assets/js/scripts/gallery/photo-swipe/photoswipe-script.js"
        type="text/javascript"></script>
}

<section class="ibooking-filter">
    
</section>


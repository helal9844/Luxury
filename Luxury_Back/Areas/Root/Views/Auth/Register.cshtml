@model User;
@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";
}

@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Root/Views/Shared/LayoutLogin/_Layout_Login.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #4DD0E1 !important;
        }
          .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        }
    </style>
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/forms/icheck/icheck.css">
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/vendors/css/forms/icheck/custom.css">
    <!-- END VENDOR CSS-->
   
    <!-- BEGIN Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css-@isRTL/pages/login-register.css">
    <!-- END Page Level CSS-->
    <!-- BEGIN Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/css-@isRTL/style.css">
    <!-- END Custom CSS-->
   }

    @section Scripts {
   
    <!-- BEGIN PAGE VENDOR JS-->
    <script src="~/Admin/app-assets/vendors/js/forms/icheck/icheck.min.js" type="text/javascript"></script>
    <!-- END PAGE VENDOR JS-->
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/Admin/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL JS-->
  }

    <div class="content-body">
    
        <section class="flexbox-container">
        
            <div class="col-12 d-flex align-items-center justify-content-center">
                <div class="col-md-4 col-10 box-shadow-2 p-0">
                    <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                        <div class="card-header border-0 pb-0">
                        @if (TempData["error_msg"] != null)
                        {
                            <div class="alert alert-danger text-center text-white">@TempData["error_msg"]</div>
                        }
                            <partial name="_SelectLanguage" />
                            <div class="card-title text-center">
                            <img src="~/images/Logo/booking_logo.png" alt="branding logo" class="avatar">
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="card-body pt-0">
                              
                                <form class="form-horizontal" asp-action="Register" asp-controller="Auth" method="post">
                                    <fieldset class="form-group floating-label-form-group">
                                        <label for="username">@localizer["username"]</label>
                                    <input type="text" class="form-control" id="username" placeholder="@localizer["username"]" asp-for="username">
                                    <span class="invalid-feedback d-block">
                                        @TempData["username"]
                                    </span>
                                    </fieldset>
                               
                                    <fieldset class="form-group floating-label-form-group">
                                    <label for="Email">@localizer["placeholdeemail"]</label>
                                    <input type="email" class="form-control" id="Email" placeholder="@localizer["placeholdeemail"]" asp-for="Email">
                                    <span class="invalid-feedback d-block">
                                        @TempData["Email"]
                                    </span>
                                    </fieldset>
                               
                                    <fieldset class="form-group floating-label-form-group mb-1">
                                    <label for="user-password">@localizer["enter"] @localizer["password"]</label>
                                    <input type="password" class="form-control" id="user-password" placeholder="@localizer["enter"] @localizer["password"]" asp-for="password">
                                    <span class="invalid-feedback d-block">
                                        @TempData["password"]
                                    </span>
                                    </fieldset>

                                    <fieldset class="form-group floating-label-form-group mb-1">
                                    <label for="password_confirme">@localizer["confirm_password"]</label>
                                    <input type="password" class="form-control" id="password_confirme" placeholder="@localizer["confirm_password"]" asp-for="confirm_password">

                                   @* <input type="password" name="password_confirmation" id="password_confirmation" class="form-control" asp-for="confirm_password"
                                            placeholder="Confirm Password" tabindex="6" data-validation-matches-match="password"
                                            data-validation-matches-message="Password & Confirm Password must be the same.">*@
                                    <span class="invalid-feedback d-block">
                                        @TempData["confirm_password"]
                                    </span>
                                    </fieldset>
                               
                                   
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12 text-center text-sm-left">
                                            <fieldset>
                                                <input type="checkbox" id="remember-me" class="chk-remember">
                                                <label for="remember-me"> Remember Me</label>
                                            </fieldset>
                                        </div>
                                    <div class="col-md-6 col-12 float-sm-left text-center text-sm-right"><a href="recover-password.html" class="card-link">@localizer["forget_password"]</a></div>
                                    </div>
                                <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-user"></i>@localizer["register"]</button>
                                </form>
                            </div>
                            <div class="card-body pt-0">
                                <a asp-action="Login" asp-controller="Auth" method="get" class="btn btn-outline-danger btn-block"><i class="ft-unlock"></i>@localizer["login"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
   

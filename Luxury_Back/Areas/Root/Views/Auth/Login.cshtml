@model User;
@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";
}
@{
    ViewBag.title = "Easily Login";
    Layout = "~/Areas/Root/Views/Shared/LayoutLogin/_Layout_Login.cshtml";
}

@section Styles {
<link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css/pages/login-register.css">
<style>
    body {
        background-color: #4DD0E1 !important;
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
    }
</style>
}

@section Scripts {
<script src="~/Admin/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>
}

<div class="card-content">
<div class="card-body pt-0">
    <form class="form-horizontal" asp-action="Login" asp-controller="Auth">
        <fieldset class="form-group floating-label-form-group">
            <label for="Email">@localizer["placeholdeemail"]</label>
            <input type="text" class="form-control" id="Email" placeholder="@localizer["enter"] @localizer["placeholdeemail"]" asp-for="Email">
                <span class="invalid-feedback d-block">
                    @TempData["Email"]
                </span>
        </fieldset>
        <fieldset class="form-group floating-label-form-group mb-1">
            <label for="password">@localizer["password"]</label>
            <input type="password" class="form-control" id="password" placeholder="@localizer["enter"] @localizer["password"]" asp-for="password">
                <span class="invalid-feedback d-block">
                    @TempData["password"]
                </span>
        </fieldset>
        <div class="form-group row">
            <div class="col-md-6 col-12 text-center text-sm-left">
                <fieldset>
                    @*<input type="checkbox" id="remember-me" class="chk-remember">
                    <label for="remember-me"> Remember Me</label>*@
                </fieldset>
            </div>
            <div class="col-md-6 col-12 float-sm-left text-end text-sm-right"><a asp-action="Forget_Pass" asp-controller="Auth" class="card-link">@localizer["forget_password?"]</a></div>
        </div>
        <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-unlock"></i>@localizer["login"]</button>
    </form>
</div>
<p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
<span> @localizer["add_new_user"] ?</span>
</p>
    <div class="card-body">
        <a asp-action="Register" asp-controller="Auth" class="btn btn-outline-danger btn-block"><i class="ft-user"></i>@localizer["register"]</a>
    </div>
</div>
           
@model User;
@{
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "rtl" : "ltr";
}
@{
    ViewBag.title = "Code Verification";
    Layout = "~/Areas/Root/Views/Shared/LayoutLogin/_Layout_Login.cshtml";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css/pages/login-register.css">
    <style>
        body {
            background-color: #4DD0E1 !important;
        }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

    </style>
}
    @section Scripts {
    <script src="~/Admin/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>

}

<div class="card-content">
<div class="card-body pt-0">
    <form class="form-horizontal" asp-action="Verify" asp-controller="Auth" method="post">
        <input type="hidden" name="Id" value="@ViewBag.Id" />
        <fieldset class="form-group floating-label-form-group">
            <label for="code">@localizer["code_verfication"]</label>
            <input type="text" class="form-control" id="code" placeholder="@localizer["code_verfication"]" name="code">
        </fieldset>
        <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-unlock"></i>@localizer["send"]</button>
    </form>
</div>
</div>
           

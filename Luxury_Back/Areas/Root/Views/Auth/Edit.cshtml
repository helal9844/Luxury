<div class="card-content collpase show">
    <div class="card-body">
        <form class="form" asp-action="Edit" asp-controller="Auth" method="post">
               @* @if(ViewBag.user!=null){
                <input type="text" name="n" value="@ViewBag.user" />
                }*@
                <input type="hidden" asp-for="Id" />
            
            <div class="form-body">
                    <h4 class="form-section"><i class="ft-user"></i>@localizer["personal_info"]</h4>
                <div class="row">
                    <div class="form-group">
                            <label for="username">@localizer["username"]</label>
                            <input type="text" id="username" class="form-control" placeholder="@localizer["username"]" asp-for="username">
                            <span class="invalid-feedback d-block">
                                @TempData["username"]
                            </span>
                    </div>
                    <div class="form-group ">
                            <label for="projectinput3">@localizer["email"]</label>
                        <input type="text" id="projectinput3" class="form-control" placeholder="@localizer["email"]" asp-for="Email">
                            <span class="invalid-feedback d-block">
                                @TempData["Email"]
                            </span>
                    </div>
                    <div class="form-group">
                            <label for="projectinput4">@localizer["contact_number"]</label>
                            <input type="text" id="projectinput4" class="form-control" placeholder="@localizer["phone"]" asp-for="Phone">
                            <span class="invalid-feedback d-block">
                                @TempData["Phone"]
                            </span>
                    </div>
                </div>
            </div>
            <div class="form-actions top">
                <a type="button" class="btn btn-warning mr-1" asp-action="Index" asp-controller="Home">
                        <i class="ft-x"></i> @localizer["cancel"]
                </a>
                <button type="submit" class="btn btn-primary">
                        <i class="la la-check-square-o"></i> @localizer["save"]
                </button>
            </div>
        </form>
    </div>
 </div>
